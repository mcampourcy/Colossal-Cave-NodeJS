{
  "extends": "airbnb-base/legacy",
  "env": {
    "jest": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "no-use-before-define": ["error", { "functions": false }],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": 0,
    "strict": ["error", "global"],
    "array-callback-return": "off",
    "max-len": ["error",
      {
        "code": 160,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
